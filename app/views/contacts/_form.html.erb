<div class="">
  <%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

    <ul>
      <% contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field col-md-12">
    <div class="row">
      <br>
      <i class="fa fa-user  btn btn-info  col-sm-1 center"></i>
      <div class="col-sm-11">
        <%= form.text_field :name , class: 'form-control form-control-lg', placeholder:"Name" %>
        <br>
      </div>
    </div>
  </div>

  <div class="field col-md-12 ">
    <div class="row">
      <i class="fa fa-building-o  btn btn-info  col-sm-1 center" ></i>
      <div class="col-sm-11">
          <%= form.text_field :company, class: 'form-control form-control-lg', placeholder:"Company" %>
        <br>
      </div>
    </div>
  </div>
  <div class="field col-md-12 ">
    <div class="row">
      <i class="fa fa-mobile  btn btn-info  col-sm-1 center" ></i>
      <div class="col-sm-11">
        <%= form.number_field :cellphone, class: 'form-control form-control-lg', placeholder:"Cellphone" %>
        <br>
      </div>
    </div>
  </div>

  <div class="field col-md-12">
    <div class="row">
      <i class="fa fa-phone  btn btn-info  col-sm-1 center" ></i>
      <div class="col-sm-11">
        <%= form.number_field :phone, class: 'form-control form-control-lg', placeholder:"Phone" %>
        <br>
      </div>
    </div>
  </div>

  <div class="field col-md-12">
    <div class="row">
      <i class="fa fa-envelope  btn btn-info  col-sm-1 center"></i>
      <div class="col-sm-11">
        <%= form.text_field :email, class: 'form-control form-control-lg', placeholder:"Email" %>
        <br>
      </div>
    </div>
  </div>

  <div class="actions col-12">

    <%= form.submit :Send, class: 'btn btn-primary btn-lg btn-block' %>
  </div>
  <% end %>

</div>
