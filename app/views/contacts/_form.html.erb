<div class="">
  <%= form_with(model: contact, local: true) do |form| %>

  <div class="col-md-12">
    <% @contact.errors.full_messages.each do |message| %> <!--representacion de cadena de texto en palabras sobre errores-->
    <button type="button"  class="btn-danger error-btn"><%= message %></button>
    <!--mensaje de error-->
    <%end%>
  </div>

  <div class="field col-md-12">
    <div class="row">
      <br>
      <i class="fa fa-user  btn btn-danger  col-sm-1 center"></i>
      <div class="col-sm-11">
        <%= form.text_field :name , class: 'form-control form-control-lg', placeholder:"Name" %>
        <br>
      </div>
    </div>
  </div>

  <div class="field col-md-12 ">
    <div class="row">
      <i class="fa fa-building-o  btn btn-danger  col-sm-1 center" ></i>
      <div class="col-sm-11">
          <%= form.text_field :company, class: 'form-control form-control-lg', placeholder:"Company" %>
        <br>
      </div>
    </div>
  </div>
  <div class="field col-md-12 ">
    <div class="row">
      <i class="fa fa-mobile  btn btn-danger  col-sm-1 center" ></i>
      <div class="col-sm-11">
        <%= form.number_field :cellphone, class: 'form-control form-control-lg', placeholder:"Cellphone" %>
        <br>
      </div>
    </div>
  </div>

  <div class="field col-md-12">
    <div class="row">
      <i class="fa fa-phone  btn btn-danger  col-sm-1 center" ></i>
      <div class="col-sm-11">
        <%= form.number_field :phone, class: 'form-control form-control-lg', placeholder:"Phone" %>
        <br>
      </div>
    </div>
  </div>

  <div class="field col-md-12">
    <div class="row">
      <i class="fa fa-envelope  btn btn-danger  col-sm-1 center"></i>
      <div class="col-sm-11">
        <%= form.text_field :email, class: 'form-control form-control-lg', placeholder:"Email" %>
        <br>
      </div>
    </div>
  </div>

  <div class="actions col-12">

    <%= form.submit :Send, class: 'btn btn-danger btn-lg btn-block' %>
  </div>
  <% end %>

</div>
